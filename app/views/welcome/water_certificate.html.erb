<section class="inner-intro about-img light-color overlay-before parallax-background">
  <div class="container">
    <div class="row title">
    </div>
  </div>
</section>
<section class="padding ptb-xs-60">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <div class="tab-content">
          <div class="row">
            <div class="col-sm-12">
              <div class="heading-box pb-30">
                <center><h2><span>Health & Sanitation</span> Certificate</h2></center>
              </div>
              <div>
                 <% @document = Document.find_by(name: "water_sanitation_certificate", is_active: true) %>
                <% if @document && @document.file.url %>
                  <iframe id="fred" style="border:1px solid #666CCC" title="PDF in an i-Frame" src="<%= asset_path(@document.file.url) %>" frameborder="1" scrolling="auto" height="700" width="100%" ></iframe>
                  </object>
                <% else %>
                  <object data="<%= asset_path 'HEALTH AND SANITIZATION.pdf' %>" type="application/pdf" width="100%" height="700"></object>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div style="margin-bottom: 2em;"></div>
    <hr />
  <div style="margin-bottom: 2em;"></div>
    <div class="row">
      <div class="col-sm-12">
        <div class="tab-content">
          <div class="row">
            <div class="col-sm-12">
              <div class="heading-box pb-30">
                <center><h2><span>Safe Drinking Water</span> Testing Reports</h2></center>
              </div>
              <div>
                <% @document = Document.find_by(name: "water_sanitation_certificate", is_active: true) %>
                <% if @document && @document.file.url %>
                  <iframe id="fred" style="border:1px solid #666CCC" title="PDF in an i-Frame" src="<%= asset_path(@document.file.url) %>" frameborder="1" scrolling="auto" height="700" width="100%" ></iframe>
                  </object>
                <% else %>
                  <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <object data="<%= asset_path 'SAFE DRINKING WATER .pdf' %>" type="application/pdf" width="100%" height="700"></object>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <object data="<%= asset_path 'WATER TESTING REPORT.pdf' %>" type="application/pdf" width="100%" height="700"></object>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style type="text/css">
  .about-img{
    background: url("<%= asset_path('about1.jpg') %>") 0 40% no-repeat;
    -webkit-background-size: cover;
    background-size: cover;
  }
</style>
